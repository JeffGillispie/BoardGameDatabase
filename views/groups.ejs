<!-- views/pages/groups.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/head %>
</head>
<body class="container">

    <header>
        <% include ./partials/header %>
    </header>

    <main>
        <h2>Groups</h2>
        <table class = "table">
        	<tr>
        		<th>Name</th>	        		
        		<th>Description</th>	        		
        	</tr>			
		    <% groups.forEach(function(group) { %>
		        <tr>
			        <td><a href="/group?GroupID=<%= group.GroupID %>"><%= group.Name %></a></td>				        
			        <td><%= group.Description %></td>				        
		        </tr>
		    <% }); %>			
		</table>
    </main>

    <footer>
        <% include ./partials/footer %>
    </footer>
    
</body>
</html>