<!-- views/pages/games.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/head %>
</head>
<body class="container">

    <header>
        <% include ./partials/header %>
    </header>

    <main>        
        
        <div class="row">
            <div class="col-sm-8">            
                <div class="jumbotron">
                    <h2><%= group.Name %></h2>
                    <hr />
                    <h3>Games</h3>
                    <p><%= group.Games %></p>
                    <hr />
                    <h3>Description</h3>
                    <p><%= group.Description %></p>
                    <hr />
                    <div>	        
				        <h2>Group Events</h2>
				        <table class = "table">
				        	<tr>
				        		<th>Name</th>	        		
				        		<th>Date</th>
				        		<th>Location</th>				        		
				        	</tr>			
						    <% events.forEach(function(event) { %>
						        <tr>
							        <td><%= event.Name %></td>				        
							        <td><%= event.Date %></td>
							        <td><%= event.Location %></td>							        
						        </tr>
						    <% }); %>			
						</table>
			        </div>                    
                </div>                
            </div>
            <div class="col-sm-4">                
                <div class="well">
                    <h3>Look I'm A Sidebar!</h3>
                </div>
            </div>
        </div>
    </main>

    <footer>    	
        <% include ./partials/footer %>
    </footer>
    
</body>
</html>